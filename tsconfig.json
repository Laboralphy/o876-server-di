{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./@types"  // Chemin vers TES types personnalis√©s
    ],
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",
    "declaration": true,
    "emitDeclarationOnly": false,
  },
  "include": ["src/**/*", "index.ts"]
}
