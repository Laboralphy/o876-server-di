{{!--
User mail inbox table
@param inbox[].tag : message tag
@param inbox[].flags : list of message flags
@param inbox[].flags.important : The message is marked as important (system)
@param inbox[].flags.read : The message has been read
@param inbox[].flags.kept : The message will not be deleted automatically
@param inbox[].from : message sender
@param inbox[].topic : message topic
@param inbox[].date : message date
--}}
{{#if inbox}}
    {{#table}}
        {{#line}}
            {{t "mail.inboxHeaderTag" }},
            {{t "mail.inboxHeaderFlags" }},
            {{t "mail.inboxHeaderFrom" }},
            {{t "mail.inboxHeaderTopic" }},
            {{t "mail.inboxHeaderDate" }}
        {{/line}}
        {{#each inbox}}{{#line}}
            {{ tag }},
            {{#if flags.important}}{{color "yellow"}}{{#underline}}/!\\{{/underline}}{{/if}}
            {{#if flags.read }}{{else}}{{color "blue"}}U{{color ""}}{{/if}}
            {{#if flags.kept }}{{color "red"}}{{#bold}}P{{/bold}}{{color ""}}{{/if}},
            {{ from }},
            {{ topic }},
            {{ date }}
        {{/line}}{{/each}}
    {{/table}}
{{else}}
    {{t "mail.inboxEmpty" }}
{{/if}}
